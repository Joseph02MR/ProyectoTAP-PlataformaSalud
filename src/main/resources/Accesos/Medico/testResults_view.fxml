<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?><?import javafx.scene.layout.*?>
<?import com.jfoenix.controls.JFXButton?>

<?import de.jensd.fx.glyphs.materialdesignicons.MaterialDesignIconView?><?import de.jensd.fx.glyphs.fontawesome.FontAwesomeIconView?>
<AnchorPane xmlns="http://javafx.com/javafx" xmlns:fx="http://javafx.com/fxml"
    prefHeight="400.0" prefWidth="600.0" styleClass="gradient-background" stylesheets="/css/DashboardStyle.css">

    <VBox AnchorPane.rightAnchor="5" AnchorPane.leftAnchor="5" AnchorPane.topAnchor="5" AnchorPane.bottomAnchor="5" alignment="CENTER" spacing="10"  >
        <HBox spacing="10" alignment="CENTER">
            <FontAwesomeIconView glyphName="PENCIL_SQUARE" glyphSize="20" />
            <Label text="Registros de Pruebas COVID" alignment="CENTER" style="-fx-font-size:20; -fx-font-weight:bold"/>
            <FontAwesomeIconView glyphName="PENCIL_SQUARE" glyphSize="20" />
        </HBox>
        <TableView fx:id="tvTests" maxWidth="550" maxHeight="300" />
        <HBox alignment="CENTER" spacing="10">
            <JFXButton fx:id="btnExit" text="Regresar" buttonType="FLAT" style="-fx-graphic-text-gap:10;-fx-background-color: #d49426">
                <graphic>
                    <MaterialDesignIconView glyphName="EXIT_TO_APP" />
                </graphic>
            </JFXButton>
        </HBox>
    </VBox>
</AnchorPane>
